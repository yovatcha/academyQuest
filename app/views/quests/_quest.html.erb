<div id="<%= dom_id quest %>" class="w-full my-10">
  <div class="bg-base-100 rounded-xl p-6 space-y-4">
    <div class="flex justify-between items-start">
      <h2 class="text-2xl font-bold text-primary">🎯 <%= quest.name %></h2>

      <!-- Date Badge -->
      <div class="badge badge-accent text-xs py-3 px-3 gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
        </svg>
        <%= quest.created_at.strftime("%b %d, %Y") %>
      </div>
    </div>

    <div class="divider my-2"></div>

    <div class="grid grid-cols-1 gap-4">
      <div>
        <span class="block text-sm font-semibold text-gray-500 mb-2">Status</span>
        <% if quest.status? %>
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-md bg-green-100 text-green-700 text-sm font-medium">
            ✅ Done
          </span>
        <% else %>
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-md bg-yellow-100 text-yellow-700 text-sm font-medium">
            ⏳ Undone
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>
