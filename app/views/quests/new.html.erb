<% content_for :title, "New Quest" %>

<div class="w-full max-w-3xl mx-auto p-4 space-y-6">
  <div class="space-y-1">
    <h1 class="text-4xl font-extrabold text-accent">Create a New Quest</h1>
    <p class="text-sm text-gray-500">Fill in the details to add your next mission ✍️</p>
  </div>

  <div class="bg-base-100 shadow-md rounded-xl p-6 space-y-4">
    <%= render "form", quest: @quest %>
  </div>

  <div>
    <%= link_to "← Back to Quests", quests_path,
        class: "btn btn-outline btn-primary transition-transform transform hover:-translate-y-1" %>
  </div>
</div>
